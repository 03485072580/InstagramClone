<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relLayout1">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/instagram"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/login_email1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_logo"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/login_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext_standard"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="@dimen/EditTextPaddingStandard" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/login_password1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_email1"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext_standard"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/EditTextPaddingStandard" />
    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/login_password1"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_standard"
        android:text="Login" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Account yet? Create one"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="@color/blue"
        android:layout_below="@id/login"
        android:layout_marginTop="12dp"
        android:id="@+id/navigating_to_register_activity"/>
    </RelativeLayout>

    <ProgressBar
        android:layout_width="120dp"
        android:layout_height="120dp"
        style="@style/MyProgressBar"
        android:layout_centerInParent="true"
        android:id="@+id/login_progress"/>


</RelativeLayout>
