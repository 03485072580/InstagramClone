<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fasih.instagramapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Utils.Home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Utils.Search.SearchActivity" />
        <activity android:name=".Utils.Share.ShareActivity" />
        <activity android:name=".Utils.Likes.LikesActivity" />
        <activity android:name=".Utils.Profile.ProfileActivity" />
        <activity android:name=".Utils.Profile.AccountSettingActivity" />
        <activity android:name=".Utils.Login.LoginActivity" />
        <activity android:name=".Utils.Register.RegisterActivity" />
        <activity android:name=".Utils.Share.NextActivity"></activity>
    </application>

</manifest>